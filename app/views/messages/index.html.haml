.wrapper
  .chat-side
    .side-header
      .side-box
        %p.side-box__username
          amako hiroshi
        %ul.side-box___menu
          %li.side-box___editusers
            =link_to"#" do
              =icon("fas","edit")
          %li.side-box___cog
            =link_to"#" do
              =icon("fas","cog")

    .groups
  .chat-main
    .main-header
      .header-leftbox
        %h2.main-header__group
          aaa
        %ul.header-leftbox__list
          %li.header-leftbox__list__name
            yoro
      %a.main-header__edit
        .edit-btn
          =link_to"#" do
            Edit
          
    .messages
    .form
      %form.new-message
        .input-box
          %input{type: "text", class: "input-box__text",placeholder: "type a message"}
          %label{class: "input-box__image"}
            =icon("fas","image")
            %input{type:"file",class:"input-box__file"}
        %input{type:"submit",class: "submit-btn"}


