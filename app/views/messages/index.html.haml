.wrapper
  = render "side_bar"
  = render "main_chat"

.header
  .header-group__name
    %h1.header-group__name__site
      teck camp
    .header-group__text
      %h1.header-group__message__text
        まだメッセージがありません

.chat-side
  .side-header
  .side-header__box
    %p.side-header__box__username
      amako hiroshi
    .side-header__box__menu
      %ul.side-header__box__menu
        %li.side-header__box__edit-user
          =link_to "#" do
            = icon("fas","edit")
        %li.side-header__box__cog 
          =link_to "#" do
            = icon("fas","cog")

.contents
  .contents__message
    %h3.contents__message__day
  .chatmain
    .chatmain__info
      %h2.chatmain__info__test
        test
        %li.chatmain__info__member
          member amako hiroshi
    .chatmain__info__edit
      %h2.hatmain__info__edit
        a
  .chatmessage-form
    .chatmessage-form__click
      %input{type: "text", class: "chatmessage-form__click__text",placeholder: "type a meesage"}
      %label{class: "chatmessage-form__click__image"}
        =icon("fas","image")
        %input{type:"file",class:"chatmessage-form__click__file"}
      %input{type:"submit",class: "sub,it-btn"}